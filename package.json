{
  "dependencies": {
    "codemirror": "^6.0.2"
  },
  "devDependencies": {
    "esbuild": "0.27.0"
  },
  "scripts": {
    "build": "./node_modules/.bin/esbuild src/* --define:DEV=false  --bundle --outdir=./static/ --loader:.html=copy --loader:.svg=text",
    "dev": "./node_modules/.bin/esbuild src/* --define:DEV=true --bundle --watch --outdir=./static/ --servedir=./static --loader:.html=copy --loader:.svg=text",
    "format": "prettier --write \"src/**/*.{ts,js,json,css,html}\""
  }
}
